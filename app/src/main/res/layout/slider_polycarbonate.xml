<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >



    <TextView
        android:id="@+id/polycarbonate_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        tools:text="تیتر"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/polycarbonate_text_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/polycarbonate_title"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="60dp"
        android:gravity="center|center_horizontal"
        android:textSize="18sp"
        tools:text="توضیحات" />

        <TextView
        android:id="@+id/polycarbonate_text_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="false"
        android:layout_below="@+id/polycarbonate_text_1"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="60dp"
        android:gravity="center|center_horizontal"
        tools:text="توضیحات"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/polycarbonate_text_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="false"
        android:layout_below="@+id/polycarbonate_text_2"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="60dp"
        android:gravity="center|center_horizontal"
        tools:text="توضیحات"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/polycarbonate_text_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/polycarbonate_text_3"
        android:layout_centerHorizontal="false"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="60dp"
        android:gravity="center|center_horizontal"
        tools:text="توضیحات"
        android:textSize="18sp" />
</RelativeLayout>