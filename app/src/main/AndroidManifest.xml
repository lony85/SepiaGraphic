<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sepiagraphic">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SepiaGraphic">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".ui.contact.ContactUsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.SepiaGraphic.NoActionBar"
            android:exported="false" />
        <activity
            android:name=".ui.services.ServiceDetailActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.SepiaGraphic.NoActionBar" />
        <activity
            android:name=".ui.services.PolycarbonateActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.SepiaGraphic.NoActionBar" />
        <activity
            android:name=".SplashScreen"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.SepiaGraphic.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.SepiaGraphic.NoActionBar" />
    </application>

</manifest>